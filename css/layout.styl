@media screen and (max-width: 850px)
	nav 
		// position relative
		// padding-top 200px
		& ul
			text-align center
			display block
			width 100%
			& li
				display block
				width 100%
				& a
					width 100%
					padding 10px 0
					display block
				& ul, &:hover ul
					position relative
					display none
				&:focus ul, &:hover ul, & a:hover+ul, & a:focus+ul, & a:active+ul
					display block
			& .social
				width 50%
				& a, & a:focus, & a:hover
					margin 0 20px
				& .facebook
					float right
		&>button+ul 
			display none
		&>button, &>button:hover, &>button:active, &>button:focus
			display block
		&>button.open+ul
			text-shadow 0 0 3px #222
			background-color rgba(c1,.4)
			display block
			& ul
				text-shadow none

